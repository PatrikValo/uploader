{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "module": "es6",
        "moduleResolution": "node",
        "strictFunctionTypes": false,
        "target": "es6",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "types" : [], // it helps remove error with jest
        "noImplicitAny": true,
        "jsx": "react",
        "allowJs": true,
        "lib": [
            "dom",
            "es6",
            "scripthost"
        ]
    },
    "include": [
        "./client/src/**/*"
    ]
}